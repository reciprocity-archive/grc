-instance = program
-is_root = true

-content_for :widget_title do
  -unless program.company_controls?
    Directives
    %span.subtitle (Regulations, Contracts, Policies)
    and Controls
  -else
    Controls

-content_for :widget_help, 'program_directives'

-content_for :widget_id, 'program_directives_widget'

-content_for :widget_buttons do
  .filter
    .row-fluid
      .span6
        %input.ui-corner-all.widgetsearch.clear-value(type='text' placeholder='Search')
      .span6
        .pull-right
          %a.btn.btn-add{ :href => new_flow_control_path(:'program_id' => instance.id), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-dirty' => '#category_controls, #combo', :'data-route' => "tab=category_controls", :'data-modal-class' => 'modal-wide', :rel => "tooltip", :title => 'Create New Control' }
            %i.grcicon-add
            Control
        .pull-right
          -unless program.company_controls?
            .btn-group.left-dropdown.button-space
              %a{:'data-toggle'=>"dropdown", :href => "#", :class => "btn btn-add dropdown-toggle", :rel => "tooltip", :title => "Add Regulation, Contract, or Policy"}
                %i.grcicon-add
                Directive
              %ul.dropdown-menu
                %li.add-new-item
                  %a{:'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :'data-toggle' => "modal-ajax-relationship-selector", :href => list_edit_flow_program_directives_path(:program_id => instance.id, :meta_kind => :regulation), :'data-modal-class' => 'modal-wide' }
                    %i.grcicon-regulation-black
                    Regulation
                %li.add-new-item
                  %a{:'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :'data-toggle' => "modal-ajax-relationship-selector", :href => list_edit_flow_program_directives_path(:program_id => instance.id, :meta_kind => :contract), :'data-modal-class' => 'modal-wide' }
                    %i.grcicon-contract-black
                    Contract
                %li.add-new-item
                  %a{:'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :'data-toggle' => "modal-ajax-relationship-selector", :href => list_edit_flow_program_directives_path(:program_id => instance.id, :meta_kind => :policy), :'data-modal-class' => 'modal-wide' }
                    %i.grcicon-policy-black
                    Policy

.tabbable
  %ul.nav.nav-tabs
    -unless program.company_controls?
      %li.active=link_to '<i class="grcicon-directive-black"></i>Directives'.html_safe, '#directives', :data => { :toggle => 'tab', :'tab-href' => flow_directives_path(:program_id => instance.id, :tree => true, :search_sections => true) }
    %li=link_to '<i class="grcicon-control-black"></i>Controls'.html_safe, '#controls', :data => { :toggle => 'tab', :'tab-href' => flow_controls_path(:program_id => instance.id, :list => true) }
    -#%li=link_to '<i class="grcicon-reg-map"></i>Combo'.html_safe, '#combo', :data => { :toggle => 'tab', :'tab-href' => flow_sections_path(:program_id => instance.id, :combo => true) }

  .action-items
    %a.expandAll{:href => "#", :rel => "tooltip", :title => "Expand all"}
      %i.grcicon-wide-black
    %a.shrinkAll{:href => "#", :rel => "tooltip", :title => "Collapse all"}
      %i.grcicon-normal-black

  .tab-content
    #directives.tab-pane
    #controls.tab-pane
    #combo.tab-pane
