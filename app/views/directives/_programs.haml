-content_for :widget_title do
  %i.grcicon-program
  Programs using #{directive.meta_kind.to_s.titleize}
  %span=directive.programs.count

-content_for :widget_buttons do
  -# for story https://www.pivotaltracker.com/story/show/45635355
  -#.filter  
    .row-fluid
      .span12
        .pull-right
          .btn.btn-add
            %i.grcicon-edit-white
            Manage Programs

-content_for :widget_help, 'directive_programs'

-content_for :widget_id, 'directive_programs_widget'

%ul.tree-structure.simple
  -directive.programs.each do |program|
    %li.item-main
      %a{:href => flow_program_path(program), :class => "block-element", :data => { :'popover-href' => tooltip_flow_program_path(program), :'popover-trigger' => 'sticky-hover'} }
        .item-title
          .row-fluid
            .span12
              %span.title
                =program.title
