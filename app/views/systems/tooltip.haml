-content_for :tooltip_title do
  .row-fluid
    .span12
      %h3
        -if system.is_biz_process?
          %i{:class => "grcicon-businessprocess-black"}
        -else
          %i{:class => "grcicon-system-black"}
        =system.slug
        %span=system.title

.row-fluid
  .span12
    %h4 Description
    -if system.description != ""
      =display_as_html system.description
    -else
      .rtf
        %p.no-data No description available